# === Local Development Config ===
# Copy to .env and fill in values

# Database (local Docker Postgres)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=diligence
DATABASE_USER=diligence
DATABASE_PASSWORD=localdev

# GCP (local dev uses direct env vars instead of Secret Manager)
PROJECT_ID=your-gcp-project-id
REGION=us-central1
LOCAL_DEV=true

# Google Calendar OAuth
GCAL_OAUTH_CLIENT_ID=
GCAL_OAUTH_CLIENT_SECRET=
GCAL_REFRESH_TOKEN=
CALENDAR_ID=primary

# Asana
ASANA_TOKEN=
ASANA_PROJECT_GID=
ASANA_PIPELINE_PROJECT_GID=

# Notion
NOTION_TOKEN=
NOTION_PARENT_PAGE_ID=

# LLM
OPENAI_API_KEY=
LLM_MODEL=gpt-4o

# Ingress
INGRESS_PUBLIC_BASE_URL=http://localhost:8080

# Worker URL (for Cloud Tasks in local dev)
WORKER_URL=http://localhost:8082

# Tenant (single-tenant MVP)
TENANT_ID=default

# Service name (for structured logging)
SERVICE_NAME=diligence-local
