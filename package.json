{
  "name": "xfund-deal-pipeline",
  "version": "1.0.0",
  "private": true,
  "description": "GCP-based deal diligence automation (GCal → Asana → Notion)",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:shared": "npm run build -w packages/shared",
    "dev:ingress": "npm run dev -w apps/ingress",
    "dev:admin": "npm run dev -w apps/admin",
    "dev:worker": "npm run dev -w apps/worker",
    "db:migrate": "tsx packages/shared/src/db/migrate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}